<h1>Galaxies</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Radius</th>
      <th>Color</th>
      <th>Stars</th>
      <th>Brightness</th>
    </tr>
  </thead>
  <tbody class='galaxies'>
    <!-- Galaxies will be placed here -->
  </tbody>
</table>

<section id="create-form">
  <h4>Create Galaxy</h4>

    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" placeholder="Name">
    </div>
    <div class="form-group">
      <label for="radius">Radius</label>
      <input type="text" class="form-control" id="radius" placeholder="Radius">
    </div>
    <div class="form-group">
      <label for="color">Color</label>
      <input type="text" class="form-control" id="color" placeholder="Enter Color">
    </div>
    <div class="form-group">
      <label for="stars">Stars</label>
      <input type="text" class="form-control" id="stars" placeholder="Star count">
    </div>
    <div class="form-group">
      <label for="brightness">Brightness</label>
      <input type="text" class="form-control" id="brightness" placeholder="Brightness">
    </div>
    <button id='add-galaxy' type="submit" class="btn btn-default">Create Galaxy</button>

</section>



